];

const linksWithColors = blogroll.map((link, index) => {
	const color = colors[index % colors.length];
	return {
		...link,
		color
	};
});
---

<Layout title="Blogroll">
	<ArrowHeader>Blogroll</ArrowHeader>
	<article>
		<section>
			<p>
				Here are links to some RSS feeds that I subscribe to. Mostly personal blogs, and some from
				friends. Some are updated regularly, and some aren't updated any more.
			</p>

			<p>All of them are worth reading.</p>
		</section>
		<ul>
			{
				linksWithColors.map((link) => (
					<li>
						<a style={`--background-color: var(--${link.color}-8)`} href={link.href}>
							{link.title}
						</a>
					</li>
				))
			}
		</ul>
	</article>
</Layout>

<style>
	ul {
		display: flex;
		flex-direction: column;
		list-style: none;
		border-top: 5px solid var(--text-color);
	}

	a {
		font-size: var(--text-xl);
		text-decoration: none;
		color: var(--text-color);
		padding: 0 0.5rem;
		display: block;
	}

	a:hover {
		background-color: var(--background-color);
	}

	li {
		border-bottom: 5px solid var(--text-color);
	}

	li:nth-last-child(2) {
		border-bottom: none;
	}

	li:last-of-type {
		border-bottom: none;
	}

	section {
		padding: 1rem 0.5rem;
	}

	p {
		font-size: var(--text-lg);
	}

	p ~ p {
		margin-top: 1rem;
	}

	@media (min-width: 768px) {
		ul {
			display: grid;
			grid-template-columns: repeat(2, 1fr);
		}

		li {
			border-right: 5px solid var(--text-color);
		}

		li:nth-of-type(even) {
			border-right: none;
		}
	}
</style>
