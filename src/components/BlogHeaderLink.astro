---
import type { Post } from '../lib/types';
import BlogHeader from './BlogHeader.astro';

interface Props {
	post: Post;
}

const { post } = Astro.props;
---

<div>
	<a href={`/blog/${post.slug}`}>
		<BlogHeader post={post.data} hoverable={true} />
	</a>
</div>

<style>
	a {
		text-decoration: none;
	}
</style>
